<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graySecondary"
    tools:context=".EditProfilAct">

  <ScrollView
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="30dp">

          <View
              android:id="@+id/view"
              android:layout_width="wrap_content"
              android:layout_height="250dp"
              android:background="@drawable/bg_gradient_blue_primary"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="1.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <TextView
              android:id="@+id/text1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Edit Profil"
              android:textColor="@color/whitePrimary"
              android:textSize="20sp"
              android:layout_marginTop="30dp"
              android:textStyle="bold"
              android:fontFamily="@font/mregular"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"/>
          <TextView
              android:id="@+id/text2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="We highly suggest you to \n use the correct informations"
              android:textColor="@color/whitePrimary"
              android:textSize="16sp"
              android:textAlignment="center"
              android:layout_marginTop="16dp"
              android:fontFamily="@font/mlight"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/text1"/>

          <LinearLayout
              android:id="@+id/linear"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginStart="24dp"
              android:layout_marginTop="44dp"
              android:layout_marginEnd="24dp"
              android:paddingTop="30dp"
              android:paddingBottom="30dp"
              android:gravity="center"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/text2"
              android:background="@drawable/bg_btn_white_secondary">

              <LinearLayout
                  android:layout_marginTop="120dp"
                  android:id="@+id/linear1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="24dp"
                  android:layout_marginRight="24dp"
                  android:layout_marginBottom="12dp"
                  android:orientation="vertical">
                  <TextView
                      android:layout_marginBottom="12dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/name"
                      android:fontFamily="@font/mlight"
                      android:textSize="20sp"
                      android:textColor="@color/grayPrimary"/>
                  <EditText
                      android:id="@+id/editNama"
                      android:inputType="text"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:fontFamily="@font/mregular"
                      android:background="@drawable/bg_input"
                      android:textColor="@color/blackPrimary"
                      android:lines="1"
                      android:textSize="16sp"
                      android:autofillHints="Exampel"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="24dp"
                  android:layout_marginRight="24dp"
                  android:layout_marginBottom="12dp"
                  android:orientation="vertical">

                  <TextView
                      android:layout_marginBottom="12dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/bio"
                      android:fontFamily="@font/mlight"
                      android:textSize="20sp"
                      android:textColor="@color/grayPrimary"/>
                  <EditText
                      android:id="@+id/editBio"
                      android:inputType="text"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:fontFamily="@font/mregular"
                      android:background="@drawable/bg_input"
                      android:textColor="@color/blackPrimary"
                      android:lines="1"
                      android:textSize="16sp"
                      android:paddingLeft="12dp"
                      android:paddingRight="12dp"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="24dp"
                  android:layout_marginRight="24dp"
                  android:layout_marginBottom="12dp"
                  android:orientation="vertical">
                  <TextView
                      android:layout_marginBottom="12dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/username"
                      android:fontFamily="@font/mlight"
                      android:textSize="20sp"
                      android:textColor="@color/grayPrimary"/>
                  <EditText
                      android:id="@+id/editUsername"
                      android:inputType="text"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:fontFamily="@font/mregular"
                      android:background="@drawable/bg_input"
                      android:textColor="@color/blackPrimary"
                      android:lines="1"
                      android:textSize="16sp"
                      android:autofillHints="Exampel"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="24dp"
                  android:layout_marginRight="24dp"
                  android:layout_marginBottom="12dp"
                  android:orientation="vertical">
                  <TextView
                      android:layout_marginBottom="12dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/password"
                      android:fontFamily="@font/mlight"
                      android:textSize="20sp"
                      android:textColor="@color/grayPrimary"/>
                  <EditText
                      android:id="@+id/editPassword"
                      android:inputType="text"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:fontFamily="@font/mregular"
                      android:background="@drawable/bg_input"
                      android:textColor="@color/blackPrimary"
                      android:lines="1"
                      android:textSize="16sp"
                      android:autofillHints="Exampel"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="24dp"
                  android:layout_marginRight="24dp"
                  android:orientation="vertical">
                  <TextView
                      android:layout_marginBottom="12dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/email"
                      android:fontFamily="@font/mlight"
                      android:textSize="20sp"
                      android:textColor="@color/grayPrimary"/>
                  <EditText
                      android:id="@+id/editEmail"
                      android:inputType="text"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:fontFamily="@font/mregular"
                      android:background="@drawable/bg_input"
                      android:textColor="@color/blackPrimary"
                      android:lines="1"
                      android:textSize="16sp"
                      android:autofillHints="Exampel"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"/>
              </LinearLayout>
          </LinearLayout>

          <View
              android:id="@+id/view4"
              android:layout_width="108dp"
              android:layout_height="108dp"
              android:layout_marginTop="180dp"
              android:background="@drawable/bg_view_circle_picture"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <ImageView
              android:id="@+id/imageView"
              android:layout_width="90dp"
              android:layout_height="90dp"
              android:layout_marginStart="8dp"
              android:layout_marginTop="189dp"
              android:layout_marginEnd="8dp"
              android:background="@drawable/icon_nopic"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <com.github.florent37.shapeofview.shapes.CircleView
              android:id="@+id/circleViewEdit"
              android:layout_width="90dp"
              android:layout_height="90dp"
              android:layout_marginTop="189dp"
              android:layout_marginEnd="8dp"
              android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">

              <ImageView
                  android:id="@+id/pic_edit_photo"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:src="@drawable/icon_nopic"/>
          </com.github.florent37.shapeofview.shapes.CircleView>

          <Button
              android:id="@+id/buttonAdd"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:layout_marginTop="250dp"
              android:layout_marginEnd="140dp"
              android:background="@drawable/bg_btn_add_picture"
              android:fontFamily="@font/mmedium"
              android:text="+"
              android:textColor="#FFFFFF"
              android:textSize="22sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="4"
              android:layout_marginStart="24dp"
              android:layout_marginEnd="24dp"
              android:layout_marginTop="24dp"
              android:layout_marginBottom="24dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/linear"
              app:layout_constraintStart_toStartOf="parent">

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <LinearLayout
                      android:id="@+id/btn_back"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:background="@drawable/bg_btn_white_secondary"
                      android:gravity="center">

                      <ImageView
                          android:layout_width="32dp"
                          android:layout_height="28dp"
                          android:background="@drawable/ic_back" />
                  </LinearLayout>

              </LinearLayout>

              <LinearLayout
                  android:layout_marginLeft="24dp"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="3"
                  android:orientation="vertical">

                  <Button
                      android:id="@+id/btnSaveProfile"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:background="@drawable/bg_btn_blue_primary"
                      android:fontFamily="@font/mmedium"
                      android:text="Save Profile"
                      android:textColor="@color/whitePrimary"
                      android:textSize="20sp" />
              </LinearLayout>

          </LinearLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>